# NOTE: escape key was changed by command line argument
#       DO NOT SET BY SCREENRC FILE
#       'screen -D -RR -e"^Gg"'

autodetach on
startup_message off
term xterm-256color

################################################################################
# Status Line
################################################################################
setenv _s "%{=}"
setenv _s "${_s}%?%F%{BW}%:%{Kw}%?"
setenv _s "${_s}%?%P%{GW}[COPY]%?"
setenv _s "${_s}%?%E%{CW}[ESCAPE]%?"
setenv _s "${_s}%n %t"
setenv _s "${_s}%="
setenv _s "${_s}%{-}"
caption always "$_s"

setenv _s ""
setenv _s "$_s%-w"
setenv _s "${_s}%50>"
setenv _s "$_s%{= BW}%n %t%{-}"
setenv _s "$_s%+w"
setenv _s "${_s}%-40<%="
setenv _s "${_s}[%H:%l][%m/%d %c:%s]"
hardstatus alwayslastline "$_s"

rendition monitor "=b"  "RW"

################################################################################
# key binds
################################################################################
bind  ; colon

# new screen, split
bind  n screen
bind  q remove
bind  s split
bind  v split -v

# move findow forcus
bind ^n next
bind ^p prev
bind  h focus left
bind  j focus down
bind  k focus up
bind  l focus right

bind ^k eval '@kill'
bind ^m monitor

unsetenv _s


################################################################################
# key binds
################################################################################

bind ^[ # old bind is copy
bind ^v copy

