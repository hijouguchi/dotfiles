source ~/.screenrc

# create window
screen 0
screen 1
screen 2


# create layout default
layout new 0:default
split -v
select 0
focus next
split
select 1
focus next
select  2
focus next
resize -h 60%


# create layout single
layout new 1:single
select 0

# select layout (default)
layout select 0

# vim: ft=screen
